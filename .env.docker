# Docker Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=enterprise_sso

# JWT and Session Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
SESSION_SECRET=your-super-secure-session-secret-key-change-this-in-production

# Service URLs (for internal communication)
AUTH_SERVICE_URL=http://auth-service:5001
ADMIN_API_SERVICE_URL=http://admin-api-service:5002
GATEWAY_URL=http://gateway:3001

# Database URLs
DATABASE_URL=mongodb://admin:password@mongodb:27017/enterprise_sso?authSource=admin

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# SSL Configuration (optional)
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key